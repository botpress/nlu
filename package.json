{
  "name": "@botpress/nlu",
  "version": "0.0.1",
  "description": "Botpress Standalone NLU Server. Contains all of Botpress NLU related code.",
  "author": "Botpress, Inc.",
  "license": "AGPL-3.0",
  "bin": "./packages/nlu/dist/index.js",
  "pkg": {
    "scripts": "./packages/nlu/dist/**/*.js",
    "assets": [
      "node_modules/@botpress/node-*/**/*.node",
      "packages/nlu/assets/**"
    ],
    "targets": [
      "node12-macos-x64",
      "node12-linux-x64",
      "node12-win-x64"
    ],
    "outputPath": "dist"
  },
  "scripts": {
    "dev": "yarn workspace nlu dev",
    "start": "cross-env NATIVE_EXTENSIONS_DIR=./native-extensions node ./packages/nlu/dist/index.js",
    "build": "cross-env NATIVE_EXTENSIONS_DIR=./native-extensions tsc --build",
    "package": "cross-env NATIVE_EXTENSIONS_DIR=./native-extensions pkg package.json --options max_old_space_size=8192",
    "e2e": "yarn workspace e2e start",
    "test": "yarn workspace @botpress/node-svm test && yarn workspace nlu test",
    "prettier": "cross-env prettier --check './packages/**/*.ts' '!**/*.d.ts'",
    "prettier-fix": "cross-env prettier --write './packages/**/*.ts' '!**/*.d.ts'",
    "eslint": "cross-env eslint packages/ --ext .ts",
    "eslint-fix": "cross-env eslint --fix packages/ --ext .ts"
  },
  "devDependencies": {
    "pkg": "^4.5.1"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ]
}
